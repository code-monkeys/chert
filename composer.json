	"type" : "project",
	"license" : "MIT",

    "config" : {
      "preferred-install" : "dist"
    },

	"authors": [
		{
			"name" : "Pierre-Yves Gillier",
			"email" : "pierre-yves@gillier.name",
			"homepage" : "https://pygillier.me",
			"role" : "Developer"
		}
	],
	"support" : {
